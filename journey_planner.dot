graph LSBU_PreAward_Tube {
    graph [
        bgcolor="white",
        overlap=false,
        splines=true,
        layout=neato
    ];

    node [
        shape=circle,
        fixedsize=true,
        width=0.30,
        style=filled,
        fillcolor="white",
        fontname="Helvetica",
        fontsize=9
    ];

    // ---- Stations (nodes) ----
    initial_contact          [label="Initial Contact"];
    planning_meeting         [label="Planning Meeting"];
    adri_notification        [label="ADRI Notification"];
    haplo_setup              [label="HAPLO Setup"];
    portal_setup             [label="Portal Setup"];
    internal_review          [label="Internal Review"];
    case_for_support         [label="Case for Support"];
    draft_proposal           [label="Draft Proposal"];
    review_period            [label="Review Period"];
    pre_submission           [label="Pre-submission"];
    peer_review              [label="Peer Review"];
    ethics_approval          [label="Ethics Approval"];
    hoc_adri_approval        [label="Head of College / ADRI Approval"];
    final_approvals          [label="Final Approvals"];
    rad_approval             [label="RAD Approval"];
    submission               [label="Submission"];

    partner_details          [label="Partner Details"];
    due_gateway              [label="Due Diligence Gateway"];
    due_diligence            [label="Due Diligence"];
    partner_agreements       [label="Partner Agreements"];
    partner_signoff          [label="Partner Sign-off"];

    budget_scope             [label="Budget Scope"];
    budget_planning          [label="Budget Planning"];
    draft_costs              [label="Draft Costs"];
    finalise_costs           [label="Finalise Costs"];
    financial_approval       [label="Financial Approval"];

    ethics_prep              [label="Ethics Prep"];
    impact_plan              [label="Impact Plan"];
    data_plan                [label="Data Plan"];
    submission_prep          [label="Submission Prep"];

    draft_start              [label="Draft Start"];
    tech_requirements        [label="Tech Requirements"];
    mock_interview           [label="Mock Interview"];

    // ---- Central Line (Core Approvals Journey) – TfL red ----
    edge [color="#E32017", penwidth=2.4];
    initial_contact -- planning_meeting;
    planning_meeting -- adri_notification;
    adri_notification -- haplo_setup;
    haplo_setup -- portal_setup;
    portal_setup -- internal_review;
    internal_review -- case_for_support;
    case_for_support -- draft_proposal;
    draft_proposal -- review_period;
    review_period -- pre_submission;
    pre_submission -- peer_review;
    peer_review -- ethics_approval;
    ethics_approval -- hoc_adri_approval;
    hoc_adri_approval -- final_approvals;
    final_approvals -- rad_approval;
    rad_approval -- submission;

    // ---- District Line (Partnerships & Due Diligence) – green ----
    edge [color="#00782A", penwidth=2.4];
    partner_details -- due_gateway;
    due_gateway -- due_diligence;
    due_diligence -- partner_agreements;
    partner_agreements -- partner_signoff;
    partner_signoff -- submission; // interchange at Submission

    // ---- Piccadilly Line (Finance & Costing) – blue ----
    edge [color="#0019A8", penwidth=2.4];
    budget_scope -- budget_planning;
    budget_planning -- draft_costs;
    draft_costs -- finalise_costs;
    finalise_costs -- financial_approval;
    financial_approval -- final_approvals; // interchange

    // ---- Northern Line (Ethics & Governance) – yellow / Circle style ----
    edge [color="#FFD300", penwidth=2.4];
    ethics_prep -- impact_plan;
    impact_plan -- data_plan;
    data_plan -- submission_prep;
    submission_prep -- ethics_approval; // interchange

    // ---- Metropolitan Line (Proposal Development) – magenta ----
    edge [color="#9B0056", penwidth=2.4];
    draft_start -- internal_review;
    internal_review -- case_for_support;
    case_for_support -- draft_proposal;
    draft_proposal -- tech_requirements;
    tech_requirements -- review_period;
    review_period -- pre_submission;
    pre_submission -- mock_interview;
    mock_interview -- final_approvals;
    final_approvals -- submission; // interchange
}

graph LSBU_PreAward_Tube {
    graph [
        bgcolor="#F9FAFB",
        layout=neato,
        overlap=false,
        splines=polyline,
        sep=0.8,
        pad=0.5
    ];

    // Default node styling - small circles like tube stations
    node [
        shape=circle,
        fixedsize=true,
        width=0.12,
        height=0.12,
        style=filled,
        fillcolor="white",
        fontname="Arial",
        fontsize=7,
        penwidth=1.8,
        color="black"
    ];

    // Default edge styling
    edge [
        dir=none,
        penwidth=3.0
    ];

    // ========================================
    // TIMELINE HEADERS (Week markers)
    // ========================================
    node [shape=plaintext, fontsize=9, fontname="Arial Bold"];
    week1 [label="Week 1", pos="1,7!"];
    week2 [label="Week 2", pos="3,7!"];
    week3 [label="Week 3", pos="5,7!"];
    week4 [label="Week 4", pos="7,7!"];
    week5 [label="Week 5", pos="9,7!"];
    week6 [label="Week 6", pos="11,7!"];

    // Reset node style for stations
    node [shape=circle, fontsize=7, fontname="Arial"];

    // ========================================
    // STATIONS - Positioned manually (x, y coordinates)
    // x-axis: 0-12 (timeline progression)
    // y-axis: 0-6 (different process tracks)
    // ========================================

    // CENTRAL LINE (Core Approvals Journey) - Track at y=5
    initial_contact [pos="0,5!", xlabel="Initial\nContact"];
    planning_meeting [pos="1.5,5!", xlabel="Planning\nMeeting"];
    adri_notification [pos="2.5,5!", xlabel="ADRI\nNotification"];
    haplo_setup [pos="3.5,5!", xlabel="HAPLO\nSetup"];
    portal_setup [pos="4.5,5!", xlabel="Portal\nSetup"];
    internal_review [pos="5.5,5!", xlabel="Internal\nReview"];
    case_for_support [pos="6.5,5!", xlabel="Case for\nSupport"];
    draft_proposal [pos="7.5,5!", xlabel="Draft\nProposal"];
    review_period [pos="8.5,5!", xlabel="Review\nPeriod"];
    pre_submission [pos="9.5,5!", xlabel="Pre-\nsubmission"];
    peer_review [pos="10,5!", xlabel="Peer\nReview"];
    ethics_approval [pos="10.5,4.5!", xlabel="Ethics\nApproval", width=0.18, penwidth=2.5];
    final_approvals [pos="11,5!", xlabel="Final\nApprovals", width=0.18, penwidth=2.5];
    rad_approval [pos="11.5,5!", xlabel="RAD\nApproval"];
    submission [pos="12.5,5!", xlabel="SUBMISSION", width=0.25, penwidth=3.5, fillcolor="#FEE2E2"];

    // PARTNERSHIPS TRACK (District Line) - Track at y=1
    partner_details [pos="0,1!", xlabel="Partner\nDetails"];
    due_gateway [pos="2,1!", xlabel="Due\nDiligence\nGateway"];
    due_diligence [pos="4,1!", xlabel="Due\nDiligence"];
    partner_agreements [pos="8,1!", xlabel="Partner\nAgreements"];
    partner_signoff [pos="11,1!", xlabel="Partner\nSign-off"];

    // FINANCE TRACK (Piccadilly Line) - Track at y=2.5
    budget_scope [pos="0.5,2.5!", xlabel="Budget\nScope"];
    budget_planning [pos="2,2.5!", xlabel="Budget\nPlanning"];
    draft_costs [pos="5,2.5!", xlabel="Draft\nCosts"];
    finalise_costs [pos="6.5,2.5!", xlabel="Finalise\nCosts"];
    financial_approval [pos="9,3!", xlabel="Financial\nApproval"];

    // ETHICS TRACK (Northern/Circle Line) - Track at y=4
    ethics_prep [pos="3,4!", xlabel="Ethics\nPrep"];
    impact_plan [pos="5,4!", xlabel="Impact\nPlan"];
    data_plan [pos="7,4!", xlabel="Data\nPlan"];
    submission_prep [pos="9,4!", xlabel="Submission\nPrep"];

    // PROPOSAL DEVELOPMENT TRACK (Metropolitan Line) - Track at y=3.5
    draft_start [pos="4,3.5!", xlabel="Draft\nStart"];
    tech_requirements [pos="7.5,3!", xlabel="Tech\nRequirements\n/ Support"];
    mock_interview [pos="10,3.5!", xlabel="Mock\nInterview"];

    // ========================================
    // CONNECTIONS - Lines drawn with colors
    // ========================================

    // CENTRAL LINE (Red) - Core Approvals Journey
    edge [color="#E32017", penwidth=3.0];
    initial_contact -- planning_meeting;
    planning_meeting -- adri_notification;
    adri_notification -- haplo_setup;
    haplo_setup -- portal_setup;
    portal_setup -- internal_review;
    internal_review -- case_for_support;
    case_for_support -- draft_proposal;
    draft_proposal -- review_period;
    review_period -- pre_submission;
    pre_submission -- peer_review;
    peer_review -- ethics_approval;
    ethics_approval -- final_approvals;
    final_approvals -- rad_approval;
    rad_approval -- submission;

    // DISTRICT LINE (Green) - Partnerships & Due Diligence
    edge [color="#00782A", penwidth=3.0];
    partner_details -- due_gateway;
    due_gateway -- due_diligence;
    due_diligence -- partner_agreements;
    partner_agreements -- partner_signoff;
    partner_signoff -- submission; // Interchange at Submission

    // PICCADILLY LINE (Blue) - Finance & Costing
    edge [color="#0019A8", penwidth=3.0];
    budget_scope -- budget_planning;
    budget_planning -- draft_costs;
    draft_costs -- finalise_costs;
    finalise_costs -- financial_approval;
    financial_approval -- final_approvals; // Interchange at Final Approvals

    // NORTHERN/CIRCLE LINE (Yellow) - Ethics & Governance
    edge [color="#FFD300", penwidth=3.0];
    ethics_prep -- impact_plan;
    impact_plan -- data_plan;
    data_plan -- submission_prep;
    submission_prep -- ethics_approval; // Interchange at Ethics Approval

    // METROPOLITAN LINE (Magenta) - Proposal Development
    edge [color="#9B0056", penwidth=3.0];
    draft_start -- internal_review; // Interchange
    tech_requirements -- draft_proposal; // Interchange
    draft_proposal -- tech_requirements;
    review_period -- mock_interview;
    mock_interview -- final_approvals; // Interchange

    // ========================================
    // BACKGROUND ELEMENTS (Optional - limited support)
    // ========================================

    // Thames zone (conceptual - GraphViz has limited support for background regions)
    // This would need SVG post-processing or manual addition

    // Invisible edges for timeline alignment
    edge [style=invis];
    week1 -- week2 -- week3 -- week4 -- week5 -- week6;
}
